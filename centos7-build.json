{
    "kind": "BuildConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "centos7-build"
    },
    "spec": {
        "triggers": [],
        "runPolicy": "Serial",
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://stash.its.bcit.ca/scm/doc/openshift-centos7.git"
            }
        },
        "strategy": {
            "type": "Docker",
            "dockerStrategy": {
                "from": {
                    "kind": "DockerImage",
                    "name": "centos:7"
                }
            }
        },
        "output": {
            "to": {
                "kind": "ImageStreamTag",
                "name": "centos7:latest"
            }
        },
        "resources": {},
        "postCommit": {},
        "nodeSelector": null
    }
}

{
    "kind": "ImageStream",
    "apiVersion": "v1",
    "metadata": {
        "name": "centos7"
    }
}
